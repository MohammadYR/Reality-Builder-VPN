/* Light Theme */
QWidget {
    background-color: #f0f0f0;
    color: #333;
}

QPushButton {
    background-color: #e0e0e0;
    border: 1px solid #ccc;
    padding: 5px;
}

QLineEdit, QTextEdit {
    background-color: #fff;
    border: 1px solid #ccc;
    padding: 5px;
}

QComboBox {
    background-color: #fff;
    border: 1px solid #ccc;
    padding: 5px;
}
