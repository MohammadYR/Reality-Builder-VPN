/* Dark Theme */
QWidget {
    background-color: #333;
    color: #f0f0f0;
}

QPushButton {
    background-color: #555;
    border: 1px solid #777;
    padding: 5px;
}

QLineEdit, QTextEdit {
    background-color: #444;
    border: 1px solid #666;
    padding: 5px;
    color: #f0f0f0;
}

QComboBox {
    background-color: #444;
    border: 1px solid #666;
    padding: 5px;
    color: #f0f0f0;
}
